[push]
	default = simple
[merge]
	tool = vimdiff
[core]
	filemode = true
	editor = /usr/local/bin/vim
	excludesfile = ~/.gitignore_global
  ignorecase = false
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[alias]
	graph = !git --no-pager log --all -n 15 --graph --abbrev-commit --decorate --format=tformat:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an <%ce>%C(reset)'
	stop-tracking = !git update-index --assume-unchanged
	start-tracking = !git update-index --no-assume-unchanged
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	delete-merged = "!git branch --merged | grep -v \"^\\s*master$\" | grep -v \"\\*\" | xargs -n 1 git branch -d"
[credential]
	helper = osxkeychain
[help]
	autocorrect = 1
[include]
  path = ~/.gitconfig_local
