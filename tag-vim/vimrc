" Vundle stuff
set nocompatible              " be iMproved, required
filetype off                  " required
" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
" let Vundle manage Vundle, required
Plugin 'gmarik/Vundle.vim'
Plugin 'chriskempson/base16-vim' " Theme
Plugin 'scrooloose/nerdtree'  " Project drawer
Plugin 'Xuyuanp/nerdtree-git-plugin' "Git status for NERDTree
Plugin 'kien/ctrlp.vim'       " Fuzzy search
Plugin 'scrooloose/syntastic' " Syntax checking
Plugin 'gregsexton/MatchTag'  " matching HTML tag highlighting
Plugin 'unblevable/quick-scope' "left-right movement
call vundle#end()                " required
filetype plugin indent on        " required
" see :h vundle for more details or wiki for FAQ
" Put your non-Plugin stuff after this line

"let base16colorspace=256
"set background=dark
"colorscheme base16-default

" Color text if over 80 columns
"highlight OverLength ctermbg=red ctermfg=white guibg=#592929
"match OverLength /\%81v.\+/

syntax on
set noautoindent
set incsearch	" Find the next match as we type the search
set hlsearch	" Highlight search by default
"set paste	" Don't retab everything when pasting

" Relative and Absolute Numbers
nnoremap <silent><leader>n :set number!<cr> :set relativenumber!<cr>
:au FocusLost * :set number
:au FocusGained * :set relativenumber

" Move between splits/windows
nnoremap <C-h> <C-W>h 
nnoremap <C-j> <C-W>j
nnoremap <C-k> <C-W>k
nnoremap <C-l> <C-W>l

" Swap words
:nnoremap <silent> gw "_yiw:s/\(\%#\w\+\)\(\W\+\)\(\w\+\)/\3\2\1/<CR><c-o><c-l>

" Write with sudo
cmap w!! w !sudo tee > /dev/null %

" Syntastic Recommendations
set statusline+=%#warningmsg#
set statusline+=%{SyntasticStatuslineFlag()}
set statusline+=%*
let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0

" NERDTree Customization
" Start NERDTree when no files opened
autocmd StdinReadPre * let s:std_in=1
autocmd VimEnter * if argc() == 0 && !exists("s:std_in") | NERDTree | endif
" Toggle
map <C-d> :NERDTreeToggle<CR>
" Close vim if no other windows than NERDTree are open

" unblevable/quick-scope
let g:qs_highlight_on_keys = ['f', 'F', 't', 'T']
autocmd bufenter * if (winnr("$") == 1 && exists("b:NERDTreeType") && b:NERDTreeType == "primary") | q | endif
