# Homebrew Setup
if [ $(uname -p) == 'arm' ]; then
  eval $(/opt/homebrew/bin/brew shellenv)
else
  eval $(/usr/local/bin/brew shellenv)
fi

if which brew > /dev/null; then
  alias caskrepo='cd "$(brew --repository)"/Library/Taps/homebrew/homebrew-cask'
  export PATH="$(brew --prefix)/sbin:$PATH"
fi

# Bash Autocompletion and Prompt Window Dressing for Git
# `brew install bash-completion`
if [ -f $(brew --prefix)/etc/profile.d/bash_completion.sh ]; then
  source $(brew --prefix)/etc/profile.d/bash_completion.sh
  export GIT_PS1_SHOWCOLORHINTS=1
  export GIT_PS1_SHOWDIRTYSTATE=1
  export GIT_PS1_STATESEPARATOR=''
  export PROMPT_COMMAND='__git_ps1 "\u@\h:\W" "\\\$ "'
fi

[ TERM_PROGRAM == "iTerm.app" ] && \
  [ -e "$HOME/.iterm2_shell_integration.bash" ] && \
    source "$HOME/.iterm2_shell_integration.bash"

export BASH_SILENCE_DEPRECATION_WARNING=1

export MANPAGER="sh -c 'col -bx | bat -l man -p'"

alias flushdns='sudo killall -HUP mDNSResponder'
alias bigsurusb='sudo /Applications/Install\ macOS\ Big\ Sur.app/Contents/Resources/createinstallmedia --volume /Volumes/Install\ macOS\ Big\ Sur --applicationpath /Applications/Install\ macOS\ Big\ Sur.app'
alias montereyusb='sudo /Applications/Install\ macOS\ Monterey.app/Contents/Resources/createinstallmedia --volume /Volumes/Install\ macOS\ Monterey'
